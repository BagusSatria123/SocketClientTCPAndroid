<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_pink"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginTop="88dp"
        android:text="Alamat IP Tujuan"
        app:layout_constraintEnd_toStartOf="@+id/IpClient"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/IpClient"
        android:layout_width="220dp"
        android:layout_height="44dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:text="192.168.0.100"
        app:layout_constraintBottom_toTopOf="@+id/PortClient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.651" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:text="Nomor Port"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/PortClient"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.084" />

    <EditText
        android:id="@+id/PortClient"
        android:layout_width="220dp"
        android:layout_height="44dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:text="6375"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="415dp"
        android:layout_height="40dp"
        android:layout_marginBottom="424dp"
        android:background="#8A7070"
        android:text="Listen Pesan"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/IsiClient"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PortClient"
        app:layout_constraintVertical_bias="0.326"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_kirim"
        android:layout_width="121dp"
        android:layout_height="65dp"
        android:shadowRadius="@android:integer/config_longAnimTime"
        android:text="Listen"
        android:textColor="#15171E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IsiClient"
        app:layout_constraintVertical_bias="0.092" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="159dp" />
</androidx.constraintlayout.widget.ConstraintLayout>